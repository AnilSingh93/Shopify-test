<div class="main-text-block">
    <h2>{{ section.settings.main_head }}</h2>
    <p>{{ section.settings.main_subhead }}</p>
</div>
<div class="left-side-main-container">
  <div class="left-side-container">
    {% if section.settings.left_img != blank %}
      <img src="{{ section.settings.left_img|img_url:'master'}}" alt="{{ section.settings.sec_head }}">
    {% endif %}
    {% if section.settings.sec_head != blank %}
      <div class="text-block">
        <h3>{{ section.settings.sec_head }}</h3>
        <p>{{ section.settings.sec_subhead }}</p>
      </div>
    {% endif %}
  </div>
  <div class="right-side-container">
    {% for block in section.blocks %}
        {% assign product = all_products[block.settings.product_item] %}
        <div class="product-card">
          <a href="{{ product.url }}">
            <img src="{{ product.featured_image | img_url: 'master' }}"  border="0" />
            <h4>{{ product.title }}</h4>
          </a>
        </div>
      {% endfor %}
  </div>
</div>
{% schema %}
{
  "name": "Four Products and Image",
  "class": "four-products-image",
  "settings": [
  {
    "type": "text",
    "id": "main_head",
    "label": "Section Heading"
  },
  {
    "type": "text",
    "id": "main_subhead",
    "label": "Section Sub Heading"
  },
  {
    "type": "image_picker",
    "id": "left_img",
    "label": "Side Image"
  },
  {
    "type": "text",
    "id": "sec_head",
    "label": "Heading"
  },
  {
    "type": "text",
    "id": "sec_subhead",
    "label": "Sub Heading"
  }
  ] ,
  "blocks": [
  {
	"type": "card",
	"name": "Product card",
	"settings": [
	  {
	    "type": "product",
		"id": "product_item",
		"label": "Choose the product you want displayed"
	  }
      ]
  }
  ] ,
  "presets": [
  {
    "name": "Four Products and Image"
  }
  ]
}
{% endschema %}