{{ 'section-quote.css' | asset_url | stylesheet_tag }}

<div id="Quote-Sectoin-{{ section.id }}" class="quote-section">
  <div class="quote-wrapper" {% if section.settings.bg_color != blank %}style="background-color: {{ section.settings.bg_color }}" {% endif %}>
    {% if section.settings.bg_image != blank %}
      <div class="quote_bg_img">
          <img src="{{ section.settings.bg_image | img_url : 'master' }}" alt="bg_image">
      </div>
    {% endif %}
{% if section.settings.heading != blank %}
    <div class="quote_heading">
  <h2>{{ section.settings.heading }}</h2>
    </div>
  {% endif %}
  {% if section.settings.desc != blank %}
    <div class="quote_desc">
    {{ section.settings.desc }}
    </div>
    {% endif %}
  </div>
</div>



{% schema %}
  {
    "name": "Quote Section",
    "settings": [
      {
        "id": "bg_color",
        "type": "color",
        "label": "Background Color"
      },
      {
        "id": "bg_image",
        "type": "image_picker",
        "label": "Background Image"
      },
      {
        "id": "heading",
        "type": "text",
        "label": "Heading"
      },
      {
        "id": "desc",
        "type": "richtext",
        "label": "Sub Heading"
      }
    ],
    "presets": [
      {
            "name": "Quote Section"
      }
    ]
  }
{% endschema %}

