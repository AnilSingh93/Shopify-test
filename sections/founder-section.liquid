{% stylesheet %}
{% endstylesheet %}

{% javascript %}

let btn = document.querySelector('.btn');
let clip = document.querySelector('.clip');
let close = document.querySelector('.close');
let video_one = document.querySelector('video');
let body = document.querySelector('body');
let btn2 = document.querySelector('.clip .btn .play');
let fs_btn = document.querySelector('.fs_btn');

function togglePlay() {
    return video_one.paused ? video_one.play() : video_one.pause();
};
  
fs_btn.onclick = function() {
    this.classList.add('active');
}  
btn2.onclick = function() {
    togglePlay();
}

btn.onclick = function() {
    btn.classList.add('active');
    clip.classList.add('active');
    //video_one.play();
    body.classList.add('overflow');

}

close.onclick = function() {
    btn.classList.remove('active');
    clip.classList.remove('active');
    video_one.pause();
    body.classList.remove('overflow');
}
{% endjavascript %}